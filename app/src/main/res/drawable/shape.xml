<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--背景颜色-->
    <solid android:color="#00fffb"/>

    <!--边框的宽度和颜色-->
    <stroke android:width="1dp" android:color="#FFFF00"/>

    <!--弧形的半径-->
    <corners android:radius="20dp"/>

    <!--text里面的文字与边界的间隔-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>
</shape>